# MaxVariance API Configuration
# Copy this file to .env and fill in your values

# Path to your Firebase service account JSON key file
# Generate from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Store this file OUTSIDE the repo (e.g., ~/.config/maxvariance/service-account.json)
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json

# Your Firebase user ID (find in Firebase Console > Authentication > Users)
FIREBASE_USER_ID=your_user_id_here

# API key for bearer token authentication
# Generate a strong random key, e.g.: openssl rand -hex 32
API_KEY=your_api_key_here

# Server port (default: 3001)
PORT=3001

# CORS origin (default: * for local network access)
# Set to specific origin if needed, e.g.: http://localhost:8080
CORS_ORIGIN=*

# Set to 'development' for verbose error messages
NODE_ENV=production
